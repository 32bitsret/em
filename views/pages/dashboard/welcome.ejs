<div id="welcome">

  <template id="election-result-table-template">
    <div class="xcontainer">
        <section class="statistics text-center">
            <div class="data">
              <div class="container">
                <h2><%= pageName %></h2>
                <div class="row">
                  
                  <div v-for="result in resultSummary" class="col-md-3 col-sm-6 col-xs-12">
                    <div class="stats">
                      <center>
                        <img v-if="result.party === 'PDP'" src="/images/parties/pdp.jpg"/>
                        <img v-else-if="result.party === 'SDP'" src="/images/parties/sdp.png"/>
                        <img v-else-if="result.party === 'APC'" src="/images/parties/apc.jpg"/>
                        <img v-else src="/images/parties/default.png"/>
                        <p>{{result.totalVotes}}</p>
                        <span>{{result.party}}</span>
                      </center>
                    </div>
                  </div>
                  
                  
                </div>
              </div>
            </div>
          </section>

      <div class="row" style="margin: 0px; padding-top: 25px;">
        <div class="col-md-6">
          <p><u>SMS Result Format To <em><b>07065644515</b></em></u><br/><em><b>1, APC-550, PDP-250, SDP-209, ANPP-89, 31/01/01/001</b></em>
            <br/><span style="font-size: 10px;">Where 1 = Send result; PARTY1-VOTE, PARTY2-VOTE,PARTYN-VOTE = Parties and votes; 31/01/01/001 = Polling Unit</span><br/>
          <h1 class="lead">Election Result Notification</h1>
          <table class="table table-striped" style="font-size: 10px;">
            <thead>
              <tr>
                <th>PU</th>
                <th>PU Name</th>
                <th>Sender</th>
                <th>Phone</th>
                <!-- <th>Zone</th> -->
                <th>LG</th>
                <th>Ward</th>
                <th>Party</th>
                <th>Vote</th>
                <th>Time</th>
              </tr>
            </thead>
            <tbody>
              <tr v-for="electionresult in electionresults.slice().reverse()">
                <td>{{electionresult.pollingUnit}}</td>
                <td>{{electionresult.pollingUnitName}}</td>
                <td>{{electionresult.phoneUserName}}</td>
                <td>{{'0' + electionresult.phone.substr(3)}}</td>
                <!-- <td>{{electionresult.senatorialZone}}</td> -->
                <td>{{electionresult.localGovernment}}</td>
                <td>{{electionresult.ward}}</td>
                <td>{{electionresult.party}}</td>
                <td>{{electionresult.vote}}</td>
                <td>{{electionresult.timeAgo}}</td>
              </tr>
            </tbody>
          </table>
      </div>
      <div class="col-md-6">
          <p><u>SMS Incidence Format To <em><b>07065644515</b></em></u><br/><em><b>2, 002:31/01/01/001, followed by your text</b></em>
          <br/><span style="font-size: 10px;">Where 2 = Send Incidence; 002 = Incidence Code; 31/01/01/001 = Polling Unit, Then your comment</span><br/>
          <h1 class="lead">Incidence Reports</h1>
          <table class="table table-striped" style="font-size: 10px;">
            <thead>
              <tr>
                <th>PU</th>
                <th>PU Name</th>
                <th>Sender</th>
                <th>Phone</th>
                <!-- <th>Zone</th> -->
                <th>LG</th>
                <th>Ward</th>
                <th>Incidence</th>
                <th>Description</th>
                <th>Time</th>
              </tr>
            </thead>
            <tbody>
              <tr v-for="incidencereport in incidencereports.slice().reverse()">
                <td>{{incidencereport.pollingUnit}}</td>
                <td>{{incidencereport.pollingUnitName}}</td>
                <td>{{incidencereport.phoneUserName}}</td>
                <td>{{'0' + incidencereport.phone.substr(3)}}</td>
                <!-- <td>{{incidencereport.senatorialZone}}</td> -->
                <td>{{incidencereport.localGovernment}}</td>
                <td>{{incidencereport.ward}}</td>
                <td>{{incidencereport.incidenceCode}}</td>
                <td>{{incidencereport.text}}</td>
                <td>{{incidencereport.timeAgo}}</td>
              </tr>
            </tbody>
          </table>
      </div>
    </div>
    </div>
  </template>
  

  <router-view></router-view>

</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
